@page "/productPaging"
@using BlazorWasm.Components

<h3>Product Paging</h3>

<div class="row">
    <div class="col-md-10">
        @*Place for search and sort*@
    </div>
    <div class="col-md-2">
        <a href="/createProduct">Create Product</a>
    </div>
</div>
<div class="row">
    <div class="col">
        @*Place for products*@
        <ProductTable Products="ProductListPaging" />
    </div>
</div>
<div class="row">
    <div class="col">
        @*Place for pagination*@
        <Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPage" />
    </div>
</div>


